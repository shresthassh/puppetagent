[main]
    vardir = /opt/freeware/var/lib/pe-puppet
    logdir = /opt/freeware/var/log/pe-puppet
    rundir = /opt/freeware/var/run/pe-puppet
    basemodulepath = /etc/puppetlabs/puppet/modules:/opt/puppet/share/puppet/modules
    user  = puppet
    group = puppet
    archive_files = true
    parser = future
[agent]
    report = true
    classfile = $vardir/classes.txt
    localconfig = $vardir/localconfig
    graph = true
    pluginsync = <%= @pagent_sync %>

    ignoreschedules = <%= @pagent_ignoreschedules %>
    daemon = false
    ca_server = <%= @pagent_ca %>
    server = <%= @pagent_server %>
    listen = true
    environment = <%= @pagent_environment %>
    ignorecache = true
    runinterval = <%= @pagent_interval %>
